<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="height">@dimen/clickable_bar_width</item>
        <item name="background">@color/clickable_bar_background</item>

        <item name="android:height">@dimen/clickable_bar_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="height">@dimen/clickable_bar_width</item>

        <item name="android:textColor">#ffff00</item>
        <item name="android:textSize">@dimen/clickable_bar_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
