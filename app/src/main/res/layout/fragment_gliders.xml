<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_title_text_size"
            android:textColor="@color/main_title"
            android:text="@string/activity_name_gliders"
            android:id="@+id/pilot_fragment_title"
            android:layout_gravity="left|center_vertical"/>

        <Button
            android:id="@+id/button_add_glider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="@string/add_glider_button_text"
            android:drawableLeft="@android:drawable/ic_input_add"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/settings_buttons_background">
            <RadioGroup
                android:id="@+id/settings_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <FrameLayout
            android:id="@+id/settings_pane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/default_padding"
            android:background="@color/settings_pane_background"/>
    </LinearLayout>
</LinearLayout>
